package petprojectg56;

/**
 *
 * @author Ã„vila A F
 */
public class PetProjectG56 {
//definir los datos de la clase
    private static String petName = " firulais " ;
    private static char petSex = 'M'; 
    private static int age = 5;
    private static String healthStatus = " sano";
    private static String breed = " pitbull";
    private static boolean pedigree = true;
    private static String color = " cafe";
    private static String height = " mediano" ;




//creamos las funciones (return)-- getter de cada una de las funciones de la clase
    
    public static String getPetName() {
        return petName;
    }

    public static char getPetSex() {
        return petSex;
    }

    public static int getAge() {
        return age;
    }

    public static String getHealthStatus() {
        return healthStatus;
    }

    public static String getBreed() {
        return breed;
    }

    public static boolean isPedigree() {
        return pedigree;
    }

    public static String getColor() {
        return color;
    }

    public static String getHeight() {
        return height;
    }
    
    
    //creamos el metodo para imprimir los valores de los atributos

    public static void showPetInformation() {
        System.out.println(getPetName() + "es un " + getPetSex() + "tiene " + getAge() + " de edad " + " su estado es " + getHealthStatus() + " es de raza: " + getBreed() + " y "+ getHeight() + " de color "+ getColor() + " tiene comida ? " + isPedigree());
    }
    
    public static void main(String[] args) {
        showPetInformation();
    }
}
